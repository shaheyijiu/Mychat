<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#d9d9d9" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/btn_list_item_bg">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="68dp"
            android:layout_height="68dp">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/head"
                android:id="@+id/iv_headImage"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tv_unread"
                android:visibility="gone"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/red"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_xinxi"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/rl_head"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="xxxx"
                android:textSize="18sp"
                android:textColor="#353535"
                android:id="@+id/tv_nick" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_alignParentRight="true"
                android:textSize="14dp"
                android:text="2015年11月12日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/rl_head"
            android:layout_below="@+id/rl_xinxi"
            android:id="@+id/tv_last_msg"
            android:maxEms="15"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12dp"
            android:text="你您空间啊傻瓜那是；刚；那个撒干撒加班哈就是发吧就是发吧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#d9d9d9" />
</LinearLayout>